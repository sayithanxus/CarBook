@model CreateFooterAddressDto
@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Adres Bilgisi Girişi</h4>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputAddress">Adres Bilgisi</label>
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Telefon Numarası</label>
                                <input type="number" class="form-control" id="exampleInputPhone" asp-for="Phone">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">E-Mail</label>
                                <input type="text" class="form-control" id="exampleInputEmail" asp-for="Email">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>
            </div>
        </div>
    </div>
</div>


