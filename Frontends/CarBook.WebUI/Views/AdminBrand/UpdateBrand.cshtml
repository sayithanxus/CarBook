@model UpdateBrandDto

@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Araç Markası Güncelleme Sayfası</h4>
                        <form method="post">
                            <input type="hidden" asp-for="BrandID" />
                            
                            <div class="form-group">
                                <label for="exampleInputName">Marka Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Araç Markası Adını Yapınız">
                            </div>
                           
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>

